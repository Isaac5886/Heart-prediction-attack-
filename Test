import numpy as np
import pickle

# Page configuration
st.set_page_config(
    page_title="Heart Disease Risk Assessment",
    page_icon="ü´Ä",
    layout="wide",
    initial_sidebar_state="expanded"
)

# Professional styling
st.markdown("""
    <style>
