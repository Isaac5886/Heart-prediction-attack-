        padding-bottom: 10px;
        border-bottom: 3px solid #3b82f6;
    }
    h2 {
        color: #1e40af;
        font-family: 'Helvetica Neue', sans-serif;
        font-weight: 500;
    }
    h3 {
        color: #2563eb;
        font-family: 'Helvetica Neue', sans-serif;
    }
    .stButton>button {
        background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
        color: white;
        font-size: 16px;
